@page
@{
    // Layout başlık kuralı için Title sayfa adı: Home sayfasında "ProHair Studio"
    ViewData["Title"] = "ProHair Studio";
    ViewData["Description"] = "Haarmaster (ProHair Studio): premium haarprotheses en haaroplossingen. Natuurlijk resultaat, maatwerk en discreet advies.";
}

<!-- === HERO SLIDER (FULL-BLEED + CAPTION) === -->
<section class="section hero-slider fullbleed" aria-label="Barbershop sfeerbeelden">
    <div class="container">
        <div class="slider fullbleed" id="heroSlider" data-aos="fade-in">

            <!-- Slide 1 (no CTA buttons) -->
            <div class="slide active">
                <img src="~/images/img4.jpg" alt="Heren haarprothese barber-finish" asp-append-version="true" />
                <div class="caption">
                    <h1>Haarmaster — Heren haarprotheses & Barbershop: actief, natuurlijk, zorgeloos</h1>
                    <p>Lace front of skin base met medische hechting. Sporten, douchen en slapen mogelijk — met barber-grade finish.</p>
                </div>
            </div>

            <!-- Slide 2 (no CTA buttons) -->
            <div class="slide">
                <img src="~/images/img2.jpg" alt="Onzichtbare haarlijn, maatwerk dichtheid" asp-append-version="true" />
                <div class="caption">
                    <h1>Onzichtbare haarlijn, 100% maatwerk</h1>
                    <p>Ultra-fijne lace, medische bevestiging en een natuurlijke dichtheid op maat.</p>
                </div>
            </div>

            <!-- Slide 3 (no CTA buttons) -->
            <div class="slide">
                <img src="~/images/img3.jpg" alt="Discreet consult en proefplaatsing" asp-append-version="true" />
                <div class="caption">
                    <h1>Discreet consult binnen 60 minuten</h1>
                    <p>Analyse, designopties en proefplaatsing mogelijk tijdens je eerste afspraak.</p>
                </div>
            </div>

            <!-- Slide 4 (image only) -->
            <div class="slide">
                <img src="~/images/img1.jpg" alt="Barber tools en details" asp-append-version="true" />
            </div>

            <!-- Slide 5 (image only) -->
            <div class="slide">
                <img src="~/images/hair.jpg" alt="Precisie fade en styling" asp-append-version="true" />
            </div>

            <button class="nav prev" aria-label="Vorige foto">‹</button>
            <button class="nav next" aria-label="Volgende foto">›</button>
            <div class="slider-dots" aria-hidden="true"></div>
        </div>
    </div>
</section>

<section class="container section hero">
    <div>
        <div class="hero-badges" data-aos="fade-down">
            <span class="badge">100% Maatwerk</span>
            <span class="badge">Onzichtbare haarlijn</span>
            <span class="badge">Medisch & Cosmetisch</span>
        </div>
        <h1 data-aos="fade-up">Haarmaster — Premium Haarprotheses voor een natuurlijk, selbstverzekerd leven</h1>
        <p data-aos="fade-up" data-aos-delay="100">
            Wij ontwerpen hyperrealistische haaroplossingen voor vrouwen en mannen.
            Discreet consult, hoogwaardige materialen en directe plaatsing mogelijk.
        </p>
        <div style="display:flex; gap:12px; margin:20px 0 4px" data-aos="fade-up" data-aos-delay="150">
            <a class="btn btn-primary" asp-page="/Reserveren">Plan een consult</a>
            <a class="btn btn-ghost" asp-page="/VoorNa">Bekijk voor &amp; na</a>
        </div>
        <div class="hero-badges" data-aos="fade-up" data-aos-delay="200">
            <span class="badge">★★★★★ 4.9/5</span>
            <span class="badge">Dermatologisch getest</span>
        </div>
    </div>
    <div class="hero-card" data-aos="zoom-in">
        <img src="~/images/four.jpg" alt="Lace front" asp-append-version="true" />
    </div>
</section>

<section class="container section-sm">
    <div class="grid grid-3">
        <div class="card" data-aos="fade-up">
            <h3>Onzichtbare haarlijn</h3>
            <p>Ultra-fijne front lace en medische lijmtechniek zorgen voor een naadloze look – zelfs van dichtbij.</p>
        </div>
        <div class="card" data-aos="fade-up" data-aos-delay="100">
            <h3>Comfort & ventilatie</h3>
            <p>Ademende basis, lichtgewicht draagcomfort en maatwerk voor elke hoofdhuid.</p>
        </div>
        <div class="card" data-aos="fade-up" data-aos-delay="200">
            <h3>Snelle plaatsing</h3>
            <p>Consult + proefplaatsing mogelijk in één bezoek. Nazorg en onderhoud inbegrepen.</p>
        </div>
    </div>
</section>

<section class="container section" aria-labelledby="waarom-title">
    <div class="section-header" data-aos="fade-up">
        <h2 id="waarom-title" style="margin:0 0 8px">Waarom ProHair Studio?</h2>
        <p style="color:var(--muted);margin:0">Premium maatwerk, medische precisie en een resultaat dat natuurlijk oogt – van dichtbij.</p>
    </div>

    <div class="grid grid-3" style="align-items:stretch; gap:20px; margin-top:18px">
        <!-- 1) Maatwerkproces -->
        <div class="card" data-aos="fade-up">
            <h3 style="margin-top:0">Maatwerk in 4 stappen</h3>
            <ol class="stepper">
                <li>
                    <div class="step-num">1</div>
                    <div>
                        <strong>Discreet intakegesprek</strong>
                        <p class="muted">Analyse van hoofdhuid, lifestyle en gewenste look.</p>
                    </div>
                </li>
                <li>
                    <div class="step-num">2</div>
                    <div>
                        <strong>Maatname & ontwerp</strong>
                        <p class="muted">Template/3D-meting, keuze basis, dichtheid, kleur & hairline.</p>
                    </div>
                </li>
                <li>
                    <div class="step-num">3</div>
                    <div>
                        <strong>Plaatsing & styling</strong>
                        <p class="muted">Medische lijmtechniek, ultra-fijne lace, barber-finish op maat.</p>
                    </div>
                </li>
                <li>
                    <div class="step-num">4</div>
                    <div>
                        <strong>Nazorg & onderhoud</strong>
                        <p class="muted">Tips, onderhoudsbeurten en productadvies inbegrepen.</p>
                    </div>
                </li>
            </ol>
            <a class="btn btn-ghost" asp-page="/OverOns" aria-label="Lees meer over onze werkwijze">Onze werkwijze</a>
        </div>

        <!-- 2) Resultaat & garanties -->
        <div class="card" data-aos="fade-up" data-aos-delay="100">
            <h3 style="margin-top:0">Resultaat dat natuurlijk blijft</h3>
            <ul class="metrics">
                <li>
                    <div class="metric">
                        <div class="metric-value">100%</div>
                        <div class="metric-label">Human Hair</div>
                    </div>
                    <p class="muted">Zijdezacht, hittebestendig en natuurlijk vallend.</p>
                </li>
                <li>
                    <div class="metric">
                        <div class="metric-value">Onzichtbaar</div>
                        <div class="metric-label">Hairline</div>
                    </div>
                    <p class="muted">Ultra-fijne front lace + medische hechting.</p>
                </li>
                <li>
                    <div class="metric">
                        <div class="metric-value">6–8&nbsp;wk</div>
                        <div class="metric-label">Tussen onderhoud</div>
                    </div>
                    <p class="muted">Comfortabel, ademend en actief-proof.</p>
                </li>
            </ul>

            <div class="badge-row">
                <span class="badge">Dermatologisch getest</span>
                <span class="badge">Vergoeding mogelijk</span>
                <span class="badge">4.9/5</span>
            </div>
        </div>

        <!-- 3) Studio promo + social -->
        <div class="card promo-social" data-aos="fade-left" data-aos-delay="150">
            <h3 style="margin-top:0">Volg ProHair Studio</h3>
            <p class="muted">Voor/na’s, tips en nieuws uit de studio.</p>

            <div class="social-grid">
                <a class="sbtn ig" href="https://www.instagram.com/haarmasterprothesecentrum/" target="_blank" rel="noopener">
                    <svg viewBox="0 0 24 24" aria-hidden="true"><rect x="3" y="3" width="18" height="18" rx="4" fill="none" stroke="currentColor" stroke-width="1.8" /><circle cx="12" cy="12" r="3.2" fill="none" stroke="currentColor" stroke-width="1.8" /><circle cx="17.2" cy="6.8" r="1.2" fill="currentColor" /></svg>
                    Instagram
                </a>
                <a class="sbtn wa" href="https://wa.me/32472980895" target="_blank" rel="noopener">
                    <svg viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M20.5 3.5A10 10 0 0 0 3.6 20l-1.1 3.4 3.5-1a10 10 0 0 0 14.6-8.9c0-2.7-1-5.1-3-6.9ZM12 20.4a8.3 8.3 0 0 1-4.2-1.2l-.3-.2-2.5.7.7-2.4-.2-.4A8.4 8.4 0 1 1 12 20.4Zm4.7-5.5c-.3-.2-1.8-.9-2.1-1-.3-.1-.5-.2-.7.2l-.7.8c-.2.2-.4.2-.7.1a6.6 6.6 0 0 1-3.1-2.7c-.2-.4 0-.6.1-.7l.5-.5c.2-.2.2-.3.3-.5l.1-.5c0-.2 0-.4 0-.6 0-.2-.6-.5-.8-.6h-.5c-.2 0-.5 0-.7.3s-1 1-1 2.4 1.1 2.7 1.2 2.9c.1.2 2.1 3.1 5.1 4.2.7.3 1.3.4 1.7.6.7.2 1.3.2 1.8.1.6-.1 1.8-.8 2-1.6.3-.7.3-1.4.2-1.6-.1-.2-.3-.2-.6-.4Z" /></svg>
                    WhatsApp
                </a>
            </div>

            <div class="mini-cta">
                <a class="btn btn-primary" asp-page="/Reserveren">Gratis consult</a>
                <a class="btn btn-ghost" href="https://www.instagram.com/haarmasterprothesecentrum" target="_blank" rel="noopener">Bekijk posts</a>
            </div>

            <div class="promo-note">
                <strong>Studio Lier</strong><br>
                Discreet, op afspraak • Gratis parkeren
            </div>
        </div>

        @section Scripts {
            <script src="~/js/slider.js" asp-append-version="true"></script>
        }
