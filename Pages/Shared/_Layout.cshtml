@{
    var title = ViewData["Title"] as string ?? "ProHair Studio";
}
<!doctype html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <meta name="description" content="Premium haarprotheses voor vrouwen en mannen. Natuurlijk resultaat, maatwerk en discreet advies.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    @RenderSection("Styles", required: false)   <!-- add this -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@11/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
</head>
<body>
    <header class="header">
        <div class="container nav">
            <div class="nav-left">
                <a class="logo" asp-page="/Index">
                    <img src="/assets/logo.svg" alt="ProHair Studio" style="width:30px;height:30px;object-fit:contain;" /> ProHair Studio
                </a>
            </div>
            <nav class="menu">
                <a class="@(Context.Request.Path == "/" ? "active" : null)" asp-page="/Index">Home</a>
                <a asp-page="/Vrouwen">Voor Vrouwen</a>
               <a asp-page="/Mannen">Voor Mannen</a>
                <a asp-page="/VoorNa">Voor & Na</a>
                <a asp-page="/Prijzen">Prijzen</a>
                <a href="/Reserveren">Reserveren</a>  <!-- point directly to the page -->
                <a asp-page="/OverOns">Over ons</a>
                <a asp-page="/Contact">Contact</a>
               
            </nav>
            <button class="burger" aria-label="Menu">☰</button>
        </div>
        <div class="mobile-drawer">
            <div class="mobile-panel">
                <a class="logo" asp-page="/Index"><img src="/assets/logo.svg" alt=""> ProHair Studio</a>
                <div class="mobile-links">
                    <a asp-page="/Index">Home</a>
                    <a asp-page="/Vrouwen">Voor Vrouwen</a>
                    <a asp-page="/Mannen">Voor Mannen</a>
                    <a asp-page="/VoorNa">Voor & Na</a>
                    <a asp-page="/Prijzen">Prijzen</a>
                    <a href="/Reserveren">Reserveren</a> <!-- same here -->
                    <a asp-page="/OverOns">Over ons</a>
                    <a asp-page="/Contact">Contact</a>
                    <a asp-page="/Faq">FAQ</a>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer section">
        <div class="container">
            <div class="subfoot">
                <span>© @DateTime.Now.Year ProHair Studio</span>
                <span>Made with ♥︎</span>
            </div>
        </div>
    </footer>

    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script src="https://unpkg.com/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <partial name="_FloatingContact" />
</body>
</html>
